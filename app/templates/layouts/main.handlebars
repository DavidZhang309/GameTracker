<!DOCTYPE html>
<html class="{{#if theme}}{{theme}}{{/if}}{{#unless theme}}theme-default{{/unless}}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{page_title}}</title>
        <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="/bower_components/components-font-awesome/css/font-awesome.min.css" rel="stylesheet">
        <link href="/site.css" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                        aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    <a class="navbar-brand" href="/">Game Tracker</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        {{>navbar_link active=false link="/" text="Tracker" }}
                        {{>navbar_link active=false link="/steam" text="Steam"}}
                        {{>navbar_link active=false link="/osu" text="osu!"}}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            {{#if logged_in }}<a href="/auth/logout">Logout</a>{{/if}}
                            {{#unless logged_in }}<a href="/auth/login">Login</a>{{/unless}}
                        </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
            <!--/.container-fluid -->
        </nav>

        {{{body}}}

        <footer>
            <section class="container">
                <a class="github-button" href="https://github.com/davidzhang309/GameTracker" data-size="large" data-icon="octicon-star" aria-label="Star ntkme/github-buttons on GitHub">Star</a>
            </section>
        </footer>
        <script async defer src="https://buttons.github.io/buttons.js"></script>
        <script src="/bower_components/jquery/dist/jquery.min.js"></script>
        <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>    
        <script src="/site.js"></script>
        {{{_footer_scripts}}}
    </body>
</html>